<body>
    @using (Html.BeginForm("Page1", "Game", FormMethod.Post, new { id = "formapproval" }))
    {

        <input type="number" value="70" id="myNumber">

        <div>
            <img id="id" src="../../Content/Images/temp_up.png" onclick="myFunction()">
            <img id="id2" src="../../Content/Images/temp_down.png" onclick="myFunction2()">
        </div>
        <img id="window" src="../../Content/Images/window_close_1.png" style="display: none;">
        <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script>
            var room_temp = 70;
            function myFunction() {

                document.getElementById("myNumber").stepUp(1);

            }
            function myFunction2() {
                document.getElementById("myNumber").stepDown(1);
            }

            function ColdValues() {

                room_temp = document.getElementById("myNumber").value;

                if ($("#thing1").is(":checked")) {
                    var HeatCheckbox = 1;
                }
                else {
                    var HeatCheckbox = 0;
                }

                if ($("#thing2").is(":checked")) {
                    var win_insCheckbox = 1;
                }
                else {
                    var win_insCheckbox = 0;
                }

                if ($("#thing3").is(":checked")) {
                    var ductCheckbox = 1;
                }
                else {
                    var ductCheckbox = 0;
                }

                if ($("#thing4").is(":checked")) {
                    var caulkCheckbox = 1;

                }
                else {
                    var caulkCheckbox = 0;
                }


                // alert("Before ajax");

                $.ajax({
                    url: "ColdValues",
                    data: JSON.stringify({ room_temp: room_temp, HeatCheckbox: HeatCheckbox, win_insCheckbox: win_insCheckbox, ductCheckbox: ductCheckbox, caulkCheckbox: caulkCheckbox}),
                    contentType: 'application/json',
                    type: "POST",
                    async: false,
                    success: function (data) {

                    },
                    error: function () {
                    }
                });
                //  alert("After Ajax");
            }

            $(document).ready(function () {

                $("input[id='thing2']").change(function () {

                    if ($(this).is(":checked")) {

                        $('#blind_cl').attr('src', '../../Content/Images/plastic.png');
                    }
                    else {
                        $('#blind_cl').attr('src', '../../Content/Images/plastic_null.png');
                    }


                });
                $("input[id='thing3']").change(function () {

                    if ($(this).is(":checked")) {

                        $('#duct_c').attr('src', '../../Content/Images/duct_inset.png');
                    }
                    else {
                        $('#duct_c').attr('src', '../../Content/Images/plastic_null.png');
                    }


                });
                $("input[id='thing4']").change(function () {
                    if ($(this).is(":checked")) {

                        $('#caulk_c').attr('src', '../../Content/Images/caulk_1.png');
                    }
                    else {
                        $('#caulk_c').attr('src', '../../Content/Images/plastic_null.png');

                    }


                });


                $("input[value='valuable']").change(function () {



                    var maxAllowed = 2;
                    var cnt = $("input[value='valuable']:checked").length;
                    if (cnt > maxAllowed) {
                        $(this).prop("checked", "");
                        alert('You can select maximum ' + maxAllowed + ' options');
                    }
                });

            });

        </script>


        <input type='checkbox' name='thing1' value='valuable' id="thing1" /><label for="thing1"></label>
        <br />
        <input type='checkbox' name='thing2' value='valuable' id="thing2" /><label for="thing2"></label>
